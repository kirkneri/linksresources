<%- include('../partials/head.ejs'); %>
<%- include('../partials/nav.ejs'); %>

<div class="row resources-style">
  <div class="col ms-4">
    <form class="d-flex flex-column-reverse gap-2" action="/resources" method="GET">
      <% allCategories.forEach(cat => { %>
        <button class="btn btn-outline-secondary" type="submit" name="category" value="<%= cat %>"><%= cat %></button>
      <% }) %>
      <button class="btn btn-outline-secondary" type="submit" name="category" value="">All</button>
    </form>
  </div>
  <div class="col-md-10">
      <%- include('../partials/card.ejs'); %>
  </div>
</div>
<%- include('../partials/addForm.ejs'); %>

<!-- Delete Modal -->
<% links.forEach(link => { %>
    <div class="modal fade" id="confirmationModal_<%= link.slug %>" tabindex="-1" role="dialog">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Confirmation</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
            </button>
          </div>
          <div class="modal-body">
            <p>Are you sure you want to delete this item?</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <form id="deleteForm_<%= link.slug %>" action="/<%= link.slug %>?_method=DELETE" method="POST">
              <button type="button" class="btn btn-danger" onclick="confirmDelete('<%= link.slug %>')">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  <% }) %>


<%- include('../partials/footer.ejs'); %>
