<!-- Delete Modal -->
<% links.forEach(link => { %>
    <div class="modal fade" id="confirmationModal_<%= link.slug %>" tabindex="-1" role="dialog">
      <div class="modal-dialog modal-dialog-centered" role="document">
        <div class="modal-content">
          <div class="modal-header">
            <h5 class="modal-title">Confirmation</h5>
            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close">
            </button>
          </div>
          <div class="modal-body">
            <p>Are you sure you want to delete this item?</p>
          </div>
          <div class="modal-footer">
            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
            <form id="deleteForm_<%= link.slug %>" action="/<%= link.slug %>?_method=DELETE" method="POST">
              <button type="button" class="btn btn-danger" onclick="confirmDelete('<%= link.slug %>')">Delete</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  <% }) %>


