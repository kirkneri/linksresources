<!-- Update Notes -->
<div class="container mt-5">
  <a href="/notes" class="back-button text-decoration-none">
    <i class="svgIcon fa-solid fa-arrow-left"></i>
  </a>
  <div class="row">
    <form action="/notes/<%= updatedNote.slug %>?_method=PUT" method="POST" class="d-flex flex-column align-items-center">
        <div class="col-sm-10 form-floating">
            <input type="text" class="form-control" id="title" name="title" placeholder="What's on your mind?" value="<%= updatedNote.title %>" required />
            <label for="title">What's on your mind?</label>
        </div>
        <div class="col-sm-10 mt-2">
            <textarea class="form-control" name="body" id="body" cols="30" rows="10" required><%= updatedNote.body %></textarea>
        </div>
        <div class="col-sm-10 mt-2">
            <button type="submit" class="btn btn-dark d-flex ms-auto">Submit</button>
        </div>
    </form>
    </div>
</div>